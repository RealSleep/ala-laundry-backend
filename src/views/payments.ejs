<%- include("partials/_header") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-dark table-bordered table-hover">
        <thead>
          <tr>
            <td>ID</td>
            <td>tx_id</td>
            <td>prv_tx_id</td>
            <td>sum</td>
            <td>status</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% if (payments) { %> <% for(var i = 0; i < payments.length; i++) {
          %>
          <tr>
            <td><%= payments[i].id %></td>
            <td><%= payments[i].tx_id %></td>
            <td><%= payments[i].prv_tx_id %></td>
            <td><%= payments[i].sum %></td>
            <td><%= payments[i].status %></td>
            <td class="d-flex gap-2">
              <a href="/payment/update/<%= payments[i].id %>" class="btn btn-info">
                Edit
              </a>
              <a href="/payment/delete/<%= payments[i].id %>" class="btn btn-danger">
                Delete
              </a>
            </td>
          </tr>
          <% } %> <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <div class="card-body">
        <form action="/payment/add" method="POST">
          <input
            type="text"
            name="tx_id"
            placeholder="tx_id"
            class="form-control mb-2"
            autofocus
          />
          <input
            type="text"
            name="prv_tx_id"
            placeholder="prv_tx_id"
            class="form-control mb-2"
          />
          <input
            type="text"
            name="sum"
            placeholder="sum"
            class="form-control mb-2"
          />
          <input
            type="text"
            name="status"
            placeholder="status"
            class="form-control mb-2"
          />
          <button type="submit" class="btn btn-info">Save payment</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
