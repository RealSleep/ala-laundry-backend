<%- include("partials/_header") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card bg-dark">
      <div class="card-body">
        <form action="/mode/update/<%= mode.id %>" method="POST">
          <input
            type="text"
            name="name"
            value="<%= mode.name %>"
            placeholder="Name"
            class="form-control mb-3"
            autofocus
          />
          <input
            type="text"
            name="price"
            value="<%= mode.price%>"
            placeholder="Price"
            class="form-control mb-3"
          />

          <input
            type="text"
            name="duration"
            value="<%= mode.duration%>"
            placeholder="Duration"
            class="form-control mb-3"
          />

          <button type="submit" class="btn btn-primary">save mode</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
