<%- include("partials/_header") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-dark table-bordered table-hover">
        <thead>
          <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Room_ID</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% if (machines) { %> <% for(var i = 0; i < machines.length; i++) {
          %>
          <tr>
            <td><%= machines[i].id %></td>
            <td><%= machines[i].name %></td>
            <td><%= machines[i].room_id %></td>
            <td class="d-flex gap-2">
              <a href="/machine/update/<%= machines[i].id %>" class="btn btn-info">
                Edit
              </a>
              <a href="/machine/delete/<%= machines[i].id %>" class="btn btn-danger">
                Delete
              </a>
            </td>
          </tr>
          <% } %> <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <div class="card-body">
        <form action="/machine/add" method="POST">
          <input
            type="text"
            name="name"
            placeholder="Name"
            class="form-control mb-2"
            autofocus
          />
          <input
            type="number"
            name="room_id"
            placeholder="Room_ID"
            class="form-control mb-2"
          />
         
          <button type="submit" class="btn btn-info">Save machine</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
