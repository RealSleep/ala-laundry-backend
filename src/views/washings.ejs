<%- include("partials/_header") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-dark table-bordered table-hover">
        <thead>
          <tr>
            <td>ID</td>
            <td>Mode_ID</td>
            <td>Start_time</td>
            <td>is_door_open</td>
            <td>state</td>
            <td>machine_id</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% if (washings) { %> <% for(var i = 0; i < washings.length; i++) {
          %>
          <tr>
            <td><%= washings[i].id %></td>
            <td><%= washings[i].mode_id %></td>
            <td><%= washings[i].start_time %></td>
            <td><%= washings[i].is_door_open %></td>
            <td><%= washings[i].state %></td>
            <td><%= washings[i].machine_id %></td>
            <td class="d-flex gap-2">
              <a href="/washing/update/<%= washings[i].id %>" class="btn btn-info">
                Edit
              </a>
              <a href="/washing/delete/<%= washings[i].id %>" class="btn btn-danger">
                Delete
              </a>
            </td>
          </tr>
          <% } %> <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <div class="card-body">
        <form action="/washing/add" method="POST">
          <input
            type="text"
            name="mode_id"
            placeholder="mode_id"
            class="form-control mb-2"
            autofocus
          />
          <input
            type="text"
            name="start_time"
            placeholder="start_time"
            class="form-control mb-2"
          />
          <input
            type="text"
            name="is_door_open"
            placeholder="is_door_open"
            class="form-control mb-2"
          />
          <input
            type="text"
            name="state"
            placeholder="state"
            class="form-control mb-2"
          />
          <input
            type="text"
            name="machine_id"
            placeholder="machine_id"
            class="form-control mb-2"
          />
         
          <button type="submit" class="btn btn-info">Save machine</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
