<%- include("partials/_header") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-dark table-bordered table-hover">
        <thead>
          <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Price</td>
            <td>Duration</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% if (modes) { %> <% for(var i = 0; i < modes.length; i++) {
          %>
          <tr>
            <td><%= modes[i].id %></td>
            <td><%= modes[i].name %></td>
            <td><%= modes[i].price %></td>
            <td><%= modes[i].duration %></td>
            <td class="d-flex gap-2">
              <a href="/mode/update/<%= modes[i].id %>" class="btn btn-info">
                Edit
              </a>
              <a href="/mode/delete/<%= modes[i].id %>" class="btn btn-danger">
                Delete
              </a>
            </td>
          </tr>
          <% } %> <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <div class="card-body">
        <form action="/mode/add" method="POST">
          <input
            type="text"
            name="name"
            placeholder="Name"
            class="form-control mb-2"
            autofocus
          />
          <input
            type="text"
            name="price"
            placeholder="Price"
            class="form-control mb-2"
          />
          <input
            type="text"
            name="duration"
            placeholder="Duration"
            class="form-control mb-2"
          />
          <button type="submit" class="btn btn-info">Save mode</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
