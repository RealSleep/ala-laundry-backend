<%- include("partials/_header") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card bg-dark">
      <div class="card-body">
        <form action="/machine/update/<%= machine.id %>" method="POST">
          <input
            type="text"
            name="name"
            value="<%= machine.name %>"
            placeholder="Name"
            class="form-control mb-3"
            autofocus
          />
          <input
            type="number"
            name="room"
            value="<%= machine.room_id>"
            placeholder="Room"
            class="form-control mb-3"
          />

          <button type="submit" class="btn btn-primary">save machine</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
