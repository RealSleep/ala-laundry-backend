<%- include("partials/_header") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-dark table-bordered table-hover">
        <thead>
          <tr>
            <td>ID</td>
            <td>transaction_date</td>
            <td>washing_id</td>
            <td>payment_id</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% if (transactions) { %> <% for(var i = 0; i < transactions.length; i++) {
          %>
          <tr>
            <td><%= transactions[i].id %></td>
            <td><%= transactions[i].transactions_date %></td>
            <td><%= transactions[i].washing_id %></td>
            <td><%= transactions[i].payment_id %></td>
            <td class="d-flex gap-2">
              <a href="/transaction/update/<%= transactions[i].id %>" class="btn btn-info">
                Edit
              </a>
              <a href="/transaction/delete/<%= transactions[i].id %>" class="btn btn-danger">
                Delete
              </a>
            </td>
          </tr>
          <% } %> <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <div class="card-body">
        <form action="/machine/add" method="POST">
          <input
            type="text"
            name="transactions_date"
            placeholder="transactions_date"
            class="form-control mb-2"
            autofocus
          />
          <input
            type="text"
            name="washing_id"
            placeholder="washing_id"
            class="form-control mb-2"
          />
          <input
            type="text"
            name="payment_id"
            placeholder="payment_id"
            class="form-control mb-2"
          />
         
          <button type="submit" class="btn btn-info">Save transaction</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
