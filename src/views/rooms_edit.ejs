<%- include("partials/_header") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card bg-dark">
      <div class="card-body">
        <form action="/room/update/<%= room.id %>" method="POST">
          <input
            type="text"
            name="name"
            value="<%= room.name %>"
            placeholder="Name"
            class="form-control mb-3"
            autofocus
          />
          <input
            type="text"
            name="address"
            value="<%= room.address%>"
            placeholder="Address"
            class="form-control mb-3"
          />

          <button type="submit" class="btn btn-primary">save room</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
